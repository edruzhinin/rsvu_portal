
<% reserve.each do |r| %>
	<div class="row table">
		<div class="col-lg-3"><%= link_to r.reservable.name, r.reservable %></div>
  	<div class="col-lg-2"><%=r.reservable.identificator%></div>
  	<div class="col-lg-2"><%=r.reservable.hardware_type.name%></div>
  	<div class="col-lg-1"><%=r.reservable.location.name%></div>
  	<div class="col-lg-1"><%=r.reservable.place%></div>
  	<% if show_user %>
  		<div class="col-lg-2">
  			<%=r.event.user.lastname%> <%=r.event.user.firstname%>
  		</div>
  	<%end%>
  	
  	<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
    	<% if current_user.admin? || current_user?(r.event.user) %>
     		<%=link_to "Освободить", reservation_path(r), method: :delete, data: {confirm: "Вы уверены?"}%>
     	<%end%>
    </div>
  	
	</div>
<% end %>