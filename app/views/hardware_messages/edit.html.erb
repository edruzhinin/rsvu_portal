<% provide(:title, @message.subject) %>

<h1>Редактировать сообщенеи</h1>

<div class="row">
	<%=form_for([@hardware, @message]) do |f| %>
		<div class="col-md-6">
			
			<%=f.label :subject, "Тема" %>
			<%=f.text_field :subject, class: 'form-control' %>
			
			<%=f.label :body,"Сообщение" %>
			<%=f.text_area :body,  size: "60x12" %>
			
						
		</div>	
			
		
		<div class="col-md-12">
			<%=f.submit "Сохранить", class: "btn btn-primary pull-right"%>
		</div>
	<%end%>
</div>
	