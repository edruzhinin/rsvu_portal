<% provide(:title, 'Резервы') %>
<h1>Заказ оборудования</h1>
<%= render 'shared/error_messages', obj: @reservation%>		
<div class="container">




	<div class="panel panel-info">
 		<div class="panel-heading">Зарезервировать для мероприятия</div>
  	<div class="panel-body">
  		<%= form_for [@context, @reservation] do |f| %>
  			<div class="form-group">
  			 	
  				<%=f.label :event_id,"Выбрать из созданных" %>
		  	  
		  	  		  	
		  	
  				<div class="form-inline">
    				<%=f.collection_select(:event_id, current_user.events.active, :id,:name) %>
    				
    				
    				<%= link_to "Создать новое", new_event_path, class: "btn btn-xs btn-default pull-right" %>
  				</div>
  				
				
				
				
				
  				
      		<div><%= f.submit "Создать", class: "btn btn-primary vert-align" %></div>
      	</div>
      	
			<% end %>
		</div>
  </div>
</div>