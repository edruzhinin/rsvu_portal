<% provide(:title, @hardware_model.name) %>

	

				
			<div class="panel panel-default">
  			<div class="panel-heading">
    			<h3 class="panel-title"><b>Тип: </b><%=@hardware_model.hardware_type.name%> <b>Модель: </b><%= @hardware_model.name %></h3>
    			    			
    			
  			</div>
  			<div class="panel-body">
  				<p><b>Имя:</b> <%= @hardware_model.name %></p>
  				<p><b>ID модели:</b> <%= @hardware_model.modelNo %></p>
  				<b>Комментарий:</b>
  				<pre><%=@hardware_model.comment%></pre>
  				<br>
  			     <%= render partial: "model_params", object: @hardware_model %>
  			     
  			<% if (current_user.admin?) %>
  				<div class="btn-group pull-right">
						<%=link_to "Редактировать", edit_hardware_model_path(@hardware_model), class: "btn btn-default"   %>
					</div>  			
  			<% end %>
				
			</div>
			<div class="panel panel-default">
  			<div class="panel-heading">
    			<h3 class="panel-title">Оборудование модели</h3>
    		</div>
  			<div class="panel-body">
  				<%= render partial: "shared/show_hardwares", locals: {hardwares: @hardware_model.hardwares, show_model: false, show_number: true} %>
					
					<% if (current_user.admin?) %>
						<div class="btn-group pull-right">
							<%=link_to "Добавить", new_hardware_model_hardware_path(@hardware_model), class: "btn btn-default"   %>
						</div>	
					<% end %>
				</div>
			</div>
			
			<section>
				
			</section>
			

