<% provide(:title, 'Резервирование оборудования') %>
<h1>Зарезервировать <%= @reservation.hardware.name %> </h1>

<div class="container">

<%=render 'shared/show_reserves' %>


<div class="panel panel-info">
 	<div class="panel-heading">Зарезервировать оборудование</div>
  <div class="panel-body">
  	<%= form_for( [@hardware, @reservation] ) do |f| %>
  			
  			<div class="form-group">
  			
  			
  			<%=render 'shared/reservation_error' %>
  			
  			<%= f.text_field :name, :placeholder => "Проводимые работы" , class: "form-control"%>
   			
   			
   		   		    
      	<div class="raw">
      		
      		<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 pull-left">с </div>
      		<div class="col-lg-2 col-md-3 col-sm-4 col-xs-11"><%= f.date_field :from_time, class: "form-control"%></div>
      	
      		<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 pull-left"> по </div>
      		<div class="col-lg-2 col-md-3 col-sm-4 col-xs-11"><%= f.date_field :to_time, class: "form-control"  %></div>
      		</div>
      	
      	
      	
      	
      	<div><%= f.submit "Резервировать", class: "btn btn-primary vert-align" %></div>
      	
      	
      	
			</div>
			</div>
    <% end %>
  </div>
</div>
