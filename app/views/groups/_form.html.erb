<div class="row">
	<%=form_for( @group, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="col-md-6">
			
			<%=f.label :name, "Тема" %>
			<%=f.text_field :name, class: 'form-control' %>

			<%=f.label :name, "Короткое имя" %>
			<%=f.text_field :short_name, class: 'form-control' %>
			
			<% if (current_user.admin?) %>
				<%= f.label(:global, "Глобальная группа") %>
				<%= f.check_box(:global) %>
			<% end %>
			
			<%=f.label :description,"Сообщение" %>
			<%=f.text_area :description,  size: "60x12" %>
			
						
		</div>	
			
		
		<div class="col-md-12">
			<%=f.submit "Сохранить", class: "btn btn-primary pull-right"%>
		</div>
	<%end%>
</div>