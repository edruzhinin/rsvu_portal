<h1>Типы оборудования</h1>
<table class="table table-striped">
  <thead>
     <tr>
       <th colspan="3" class="page-header">
         <h2>Типы оборудования</h2>
       </th>
     </tr>
      <tr>
        <th>Тип</th>
        <th>Моделей</th>
        <th>Устройств</th>
        
      </tr>
  </thead>
  <tbody>
      <% @hardware_types.each do |htype| %>
        <tr>
          <td><%= link_to htype.name, htype %></td>
          <td><%= htype.hardware_models.count%> </td>
          <td><%= htype.hardwares.count%> </td>
         
          
        </tr>
      <% end %>
  </tbody>
<table>  
<div class="btn-group pull-right">
	<% if (current_user.admin?) %>
  	<%=link_to "Добавить", new_hardware_type_path, class: "btn btn-default"   %>
  <% end %>

</div>