

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Типы оборудования</h3>
  </div>
  <div class="panel-body">
  	<table class="table table-striped">
    	<thead>
      	<tr>
        	<th>Тип</th>
      		<th>Моделей</th>
        	<th>Устройств</th>
        </tr>
    	</thead>
    	<tbody>
        <% @hardware_types.each do |htype| %>
          <tr>
            <td><%= link_to htype.name, htype %></td>
            <td><%= htype.hardware_models.count%> </td>
            <td><%= htype.hardwares.count%> </td>
          </tr>
        <% end %>
    	</tbody>
  	<table> 
  </div>
</div>

<section>
<div class="btn-group pull-right">
	<% if (current_user.admin?) %>
  	<%=link_to "Добавить", new_hardware_type_path, class: "btn btn-default"   %>
  <% end %>

</div>
</section> 